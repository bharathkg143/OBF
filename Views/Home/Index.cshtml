@{
    ViewData["Title"] = "OBF";
}

<style>
    #btnGetOtp {
        background: linear-gradient(to left, #8B4513, #D2691E);
        color: white;
        border-radius: 50px;
        opacity: 100%;
        border: none;
        outline: none;
        box-shadow: 3px 3px 3px #cecece, -3px -3px 3px #fff;
    }

    #btnGetOtp:disabled {
        opacity: 0.8;
    }

    #inpPhnNo{
        border-radius: 50px;
        opacity: 100%;
        height: 35px;
        outline:none;
        border:none;
        box-shadow: 3px 3px 6px rgba(0, 0, 0, 0.2);
        padding:20px;
        color: #264A9F;
        font-size: 14px;
        font-weight: bold;
    }

</style>

<div class="container mt-5">
    <div class="row justify-content-center text-center">
        <div class="col-12">
            <h4 style="opacity:100%;">
                Thank you for choosing Popular Vehicles for your New Car.<br>
                Please enter your Mobile Number to receive an OTP.
            </h4>
        </div>
    </div>

    <div class="row mt-4 justify-content-center">
        <div class="col-10 col-md-6">
            <input type="text" id="inpPhnNo" name="phnNumber" class="form-control number10DigitsOnly" placeholder="Enter Mobile Number"/>
        </div>
    </div>

    <div class="row mt-4 justify-content-center">
        <div class="col-6 col-md-4 d-flex justify-content-center">
            <button id="btnGetOtp" class="btn btn-custom w-75"><b>GET OTP</b></button>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            var message = '@ViewBag.Message';
            var status = '@ViewBag.Status';

            if (status === "Error") {
                $('#btnGetOtp').prop('disabled', true);
                toastr.options.positionClass = 'toast-bottom-right';
                toastr.options.toastClass = 'global-custom-toast';
                toastr.options.timeOut = 10000;
                toastr.error(message);
            }

             if (status === "Warning") {
                $('#btnGetOtp').prop('disabled', true);
                toastr.options.positionClass = 'toast-bottom-right';
                toastr.options.toastClass = 'global-custom-toast';
                toastr.options.timeOut = 10000;
                toastr.warning(message);
            }

        });

        $(".number10DigitsOnly").keypress(function (e) {
            var key = e.keyCode || e.which;
            var inputLength = $(this).val().length;

            if ((key >= 48 && key <= 57) && inputLength < 10) {
                return true;
            }
            else {
                return false;
            }
        });

        $('#btnGetOtp').click(function () {
            var phoneNumber = $('#inpPhnNo').val();
            if (phoneNumber == "") {
                toastr.options.positionClass = 'toast-bottom-right';
                toastr.options.toastClass = "global-custom-toast",
                toastr.warning('Please enter your Registered Mobile Number..!');
            }
            else if (phoneNumber.length != 10 && phoneNumber.length != 13) {
                toastr.options.positionClass = 'toast-bottom-right';
                toastr.options.toastClass = "global-custom-toast",
                toastr.warning('Please enter valid Registered Mobile Number..!');
            }
            else {
                $('#btnGetOtp').prop('disabled', true);
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("PhoneNumber", "Home")",
                    data: { phnNumber: phoneNumber },
                    dataType: "json",
                    success: function (response) {
                        if (response.success == true) {
                            window.location.href = '@Url.Action("EnterOTP", "Home")';
                        }

                        if(response.success == false){
                            $('#btnGetOtp').prop('disabled', false);
                            toastr.options.positionClass = 'toast-bottom-right';
                            toastr.options.toastClass = "global-custom-toast",
                            toastr.error(response.message);
                        }
                    }
                    // error: function (xhr, status, error) {
                    //     console.error("An error occurred: " + error);
                    // }
                });
            }

        });
    </script>
}
